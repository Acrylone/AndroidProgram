    <TableLayout
        android:id="@+id/leftlayout"
        android:background="@drawable/feuilleblanchequadrille"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/launch">

        <TableRow
            android:layout_weight="1">
            <TextView android:text="ONE"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:fontFamily="cursive" />

        <com.example.user.myapplication.ScoreButton
            android:layout_marginRight="30dp"
            android:background="@android:color/transparent"
            android:onClick="clickScoreButton"
            android:id="@+id/SCORE_ONE"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#EF5350" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="TWO"
                android:layout_marginLeft="5dp"
                android:fontFamily="cursive"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/SCORE_TWO"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"
                android:fontFamily="sans-serif-medium" />
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#F44336" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="THREE"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/SCORE_THREE"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#E53935" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="FOUR"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/SCORE_FOUR"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#D32F2F" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="FIVE"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/SCORE_FIVE"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#C62828" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="SIX"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/SCORE_SIX"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#B71C1C" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="TOTAL"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:id="@+id/SCORE_TOTAL"
                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <TextView android:text="BONUS (+50)"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:id="@+id/SCORE_BONUS"
                android:textSize="20dp" />
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#B71C1C" />


    </TableLayout>

    <TableLayout
        android:id="@+id/rightlayout"
        android:background="@drawable/feuilleblanche"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/launch">

        <TableRow
            android:layout_weight="1">
            <TextView android:text="PAIR"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/PAIR"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#EF5350" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="2 PAIRS"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/TWOPAIRS"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#F44336" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="3 OF KIND"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/THREEOFKIND"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#E53935" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="4 OF KIND"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/FOUROFKIND"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#D32F2F" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="1-2-3-4-5"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/STRAIGHTLOW"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#C62828" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="2-3-4-5-6"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/STRAIGHTHIGH"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#B71C1C" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="FULL HOUSE"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/FULLHOUSE"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#D50000" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="CHANCE"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/CHANCE"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#D50000" />

        <TableRow
            android:layout_weight="1">
            <TextView android:text="YATZY"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <com.example.user.myapplication.ScoreButton
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:onClick="clickScoreButton"
                android:id="@+id/YATZY"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_pen_24dp"/>

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#D50000" />


    </TableLayout>

    <LinearLayout
        android:id="@+id/dice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <com.example.user.myapplication.DieImageButton
            android:id="@+id/diceOne"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"

        />

        <com.example.user.myapplication.DieImageButton
            android:id="@+id/diceTwo"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/launch"
            android:layout_toEndOf="@+id/diceOne"
            android:layout_toRightOf="@+id/diceOne"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <com.example.user.myapplication.DieImageButton
            android:id="@+id/diceThree"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/launch"
            android:layout_toEndOf="@+id/diceTwo"
            android:layout_toRightOf="@+id/diceTwo"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <com.example.user.myapplication.DieImageButton
            android:id="@+id/diceFour"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/diceThree"
            android:layout_alignBottom="@+id/diceThree"
            android:layout_toEndOf="@+id/diceThree"
            android:layout_toRightOf="@+id/diceThree"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <com.example.user.myapplication.DieImageButton
            android:id="@+id/diceFive"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/diceFour"
            android:layout_alignBottom="@+id/diceFour"
            android:layout_toEndOf="@+id/diceFour"
            android:layout_toRightOf="@+id/diceFour"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

    </LinearLayout>


    <Button
        android:id="@+id/launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@drawable/launch_button"
        android:onClick="throwDice"
        android:soundEffectsEnabled="true"
        android:text="@string/Roll_The_Dice"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:visibility="visible"
        android:layout_above="@+id/dice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/leftlayout"
        android:layout_toLeftOf="@+id/rightlayout"
        android:layout_above="@+id/launch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yatzyfeu"
            />

    </LinearLayout>


</RelativeLayout>
