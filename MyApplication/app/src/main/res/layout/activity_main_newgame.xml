<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_newgame"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0099cc"
    tools:context="com.example.user.myapplication.MainActivity_newGame">

    <TextView
        android:text="AS"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <TextView
        android:text="TWO"
        android:layout_width="150dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText"
        android:layout_height="50dp"
        android:textAlignment="center" />

    <TextView
        android:text="THREE"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textAlignment="center" />

    <TextView
        android:text="FOUR"
        android:layout_width="150dp"
        android:id="@+id/textView4"
        android:layout_height="50dp"
        android:layout_below="@+id/editText3"
        android:layout_toLeftOf="@+id/editText3"
        android:layout_toStartOf="@+id/editText3"
        android:textAlignment="center" />

    <TextView
        android:text="FIVE"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText4"
        android:layout_toLeftOf="@+id/editText5"
        android:layout_toStartOf="@+id/editText5"
        android:textAlignment="center" />



    <TextView
        android:text="SIX"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/editText5"
        android:layout_toLeftOf="@+id/editText6"
        android:layout_toStartOf="@+id/editText6"
        android:textAlignment="center" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Launch"
        android:id="@+id/launch"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="50sp"
        android:layout_height="100dp"
        android:onClick="throwDice"
        android:layout_below="@+id/diceOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Button
        android:id="@+id/diceTwo"
        android:background="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:elevation="0dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="dieActivation"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/diceFour"
        android:layout_alignBottom="@+id/diceFour"
        android:layout_toLeftOf="@+id/diceThree"
        android:layout_toStartOf="@+id/diceThree" />

    <Button
        android:id="@+id/diceFour"
        android:background="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="dieActivation"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/editText6"
        android:layout_toLeftOf="@+id/diceFive"
        android:layout_toStartOf="@+id/diceFive"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/diceOne"
        android:background="#FFFFFF"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:onClick="dieActivation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="24dp"
        android:layout_alignBaseline="@+id/diceTwo"
        android:layout_alignBottom="@+id/diceTwo"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:id="@+id/diceFive"
        android:background="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="dieActivation"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_toLeftOf="@+id/diceSix"
        android:layout_toStartOf="@+id/diceSix"
        android:layout_alignBottom="@+id/diceFour" />

    <Button
        android:id="@+id/diceSix"
        android:background="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="dieActivation"
        android:layout_alignBaseline="@+id/diceFive"
        android:layout_alignBottom="@+id/diceFive"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="40dp"
        android:id="@+id/diceThree"
        android:background="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:onClick="dieActivation"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBaseline="@+id/diceFour"
        android:layout_alignBottom="@+id/diceFour"
        android:layout_toLeftOf="@+id/diceFour"
        android:layout_toStartOf="@+id/diceFour" />

</RelativeLayout>
