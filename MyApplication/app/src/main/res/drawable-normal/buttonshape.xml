<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="0dp"
        />
    <gradient
        android:angle="90"
        android:centerX="35%"
        android:centerColor="#FFFFFF"
        android:startColor="#E8E8E8"
        android:endColor="#DEDEDE"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="1dp"
        android:bottom="1dp"
        />
    <size
        android:width="100dp"
        android:height="100dp"
        />
    <stroke
        android:width="1dp"
        android:height="10dp"
        android:color="#3B3B3B"
        />
</shape>